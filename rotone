#include <unistd.h>

void rotone (char *s)
{
	while (*s)
	{
		if (*s >= 97 && *s <= 121 ||*s >= 65 && *s <= 89)
			*s = *s + 1;
		else if (*s == 122)
			*s = 97;
		else if (*s == 90)
			*s = 65;
		write (1, s, 1);
		s++;
	}
}

int main (int argc, char **argv)
{
	if (argc == 2)
		rotone (argv[1]);
	write (1, "\n", 1);
	return (0);
}
